        tools:layout_editor_absoluteY="550dp" />

    <Button
        android:id="@+id/btnBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUE"
        tools:layout_editor_absoluteX="202dp"
